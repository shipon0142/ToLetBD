<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#154C6D"
        android:orientation="vertical"
        tools:context="com.example.shipon.toletbd.fragment.PostFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="District/City*"
                            android:textColor="#154C6D"
                            android:textSize="16sp" />

                        <AutoCompleteTextView
                            android:id="@+id/DistrictET"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginTop="5dp"

                            android:background="@drawable/rectangle_edittext"
                            android:completionThreshold="1"
                            android:hint=""
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Area*"
                            android:textColor="#154C6D"
                            android:textSize="16sp" />

                        <AutoCompleteTextView
                            android:id="@+id/AreaET"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginTop="5dp"

                            android:background="@drawable/rectangle_edittext"
                            android:completionThreshold="1"
                            android:foregroundGravity="left"
                            android:hint=""
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:text="House/Holding No.*"
                            android:textColor="#154C6D"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/HouseET"
                            android:layout_width="match_parent"

                            android:layout_height="40dp"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/rectangle_edittext"
                            android:foregroundGravity="left"
                            android:hint=""
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Category*"
                            android:textColor="#154C6D"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/CatagorySpinnerPost"
                            android:layout_width="match_parent"

                            android:layout_height="40dp"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/rectangle_edittext"
                            android:padding="5dp"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Month*"
                            android:textColor="#154C6D"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/MonthSpinnerPost"
                            android:layout_width="match_parent"

                            android:layout_height="40dp"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/rectangle_edittext"
                            android:padding="5dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Cost (Taka)*"
                            android:textColor="#154C6D"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/CostET"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginTop="5dp"

                            android:background="@drawable/rectangle_edittext"
                            android:foregroundGravity="left"
                            android:hint=""
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="#FFFFFF"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rectangle_edittext"
                                android:gravity="center"
                                android:text="Add photo"
                                android:textColor="#154C6D"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/AddPhoto1IV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rectangle_edittext"
                                android:gravity="center"
                                android:text="Add photo"
                                android:textColor="#154C6D"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/AddPhoto2IV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rectangle_edittext"
                                android:gravity="center"
                                android:text="Add photo"
                                android:textColor="#154C6D"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/AddPhoto3IV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rectangle_edittext"
                                android:gravity="center"
                                android:text="Add photo"
                                android:textColor="#154C6D"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/AddPhoto4IV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Details*"
                        android:textColor="#154C6D"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/DetailsET"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
               android:gravity="top"
                        android:background="@drawable/rectangle_edittext"
                        android:hint=""
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textColorHint="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>