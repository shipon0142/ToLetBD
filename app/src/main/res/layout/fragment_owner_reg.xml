<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="#D3D3D3"
    tools:context="com.example.shipon.toletbd.fragment.OwnerRegFragment">
<LinearLayout
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.design.widget.TextInputEditText
        android:id="@+id/OwnerNameET"
        android:textColor="#FFFFFF"
        android:paddingLeft="10dp"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:inputType="phone"
            android:id="@+id/OwnerContactET"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:hint="Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/OwnerOccupationET"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:hint="Occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/OwnerAddressET"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/OwnerPasswordET"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/OwnerConfirmPasswordET"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:hint="Confirm password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <TextView
        android:id="@+id/OwnerRegSignUpTV"
        android:textColor="@color/colorPrimary"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:backgroundTint="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@drawable/round_shape"
        android:text="Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>
