<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical"
    tools:context="com.example.shipon.toletbd.activity.UpdatePostActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
android:onClick="UpadatePostBackClick"
                android:drawableTint="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/RentOrPostTitle"
                android:textColor="#FFFFFF"
                android:text="My Post"
                android:textSize="20sp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:onClick="UpdatePost"
                  android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="Update"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="District/City*"
                    android:textColor="#154C6D"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:id="@+id/DistrictETU"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginTop="5dp"

                    android:background="@drawable/rectangle_edittext"
                    android:completionThreshold="1"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Area*"
                    android:textColor="#154C6D"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:id="@+id/AreaETU"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginTop="5dp"

                    android:background="@drawable/rectangle_edittext"
                    android:completionThreshold="1"
                    android:foregroundGravity="left"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:text="House/Holding No.*"
                    android:textColor="#154C6D"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/HouseETU"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"

                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_edittext"
                    android:foregroundGravity="left"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp" />






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Cost (Taka)*"
                    android:textColor="#154C6D"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/CostETU"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginTop="5dp"

                    android:background="@drawable/rectangle_edittext"
                    android:foregroundGravity="left"
                    android:hint=""
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Details*"
                android:textColor="#154C6D"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/DetailsETU"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:gravity="top"
                android:background="@drawable/rectangle_edittext"
                android:hint=""
                android:padding="5dp"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
